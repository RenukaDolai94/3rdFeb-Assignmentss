                /*Renuka.D ADCGWK  Assignment-2*/
           /*To change the case in the given string*/

#include<stdio.h>
#include<string.h>
int main()
{
    char str[20];
    int i;
    printf("Enter the string: ");
    scanf("%s",str);
    for(i=0;i<=strlen(str);i++)
    {
        if(str[i]>=65 && str[i]<=90)
        {
            str[i]=str[i]+32;
        }    
        else if(str[i]>=97 && str[i]<=122)
        {
            str[i]=str[i]-32;
        }
   }
   printf("Lower Case String is: %s",str);
   return 0;
}
